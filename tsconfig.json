{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",                            
    "esModuleInterop": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "inlineSourceMap": true,
    "noEmit": true,
    "incremental": true,
    "declaration": true
  },
  "include": ["src/**/*"],                         
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": false                                   
  }
}
